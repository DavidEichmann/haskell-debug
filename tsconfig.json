{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "isolatedModules": false,
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "noImplicitAny": false,
        "noImplicitUseStrict": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "outDir": "",
        "inlineSources": true,
        "inlineSourceMap": true,
        "strictNullChecks": true,
        "allowJs": false,
        "lib":["dom","es2017"],
        "strict": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "typings/*.d.ts",
        "oldTypings/*.d.ts"
    ],
    "exclude": [
        "typings/etch.d.ts"
    ]
}
